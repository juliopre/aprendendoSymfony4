{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    {% include 'includes/messages.html.twig' %}
    <h1>Categorias</h1>
    <a href="{{path('admin_category_new')}}">Criar Categoria</a>
    <hr>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Título</th>
                <th>Criado em</th>
                <th>Ações</th>

            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td><a href="{{ path('admin_category_update', {'id': category.id}) }}">{{ category.name }}</a></td>
                    <td>{{ category.CreatedAt|date('d/M/Y H:i:s') }}</td>
                    <td>
                        <a href="{{ path('admin_category_update', {'id': category.id}) }}">editar</a>
                        <a href="{{ path('admin_category_delete', {'id': category.id}) }}">deletar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}